// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int    @id @default(autoincrement())
  name      String
  archetype String
  record    String
  lifeTotal String
  gameScore String
}

model Event {
  id               Int    @id @default(autoincrement())
  eventName        String
  roundInformation String
  format           String
}
